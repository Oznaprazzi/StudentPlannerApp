<img src="./images/logo.png">

<h1><%= title %></h1>

<p class="alert alert-danger" ng-if="loginFailMessage != ''">{{loginFailMessage}}</p>
<form ng-submit="login()">
    <div class="form-group" id="input">
        <input type="text" ng-model="username" name="username" placeholder="Username" class="form-control"/>
    </div>
    <div class="form-group" id="input">
        <input type="password" ng-model="password" name="password" placeholder="Password" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-default" ng-click="login()">Log In</button>
</form>
