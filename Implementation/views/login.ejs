<img src="./images/logo.png">

<h1><%= title %></h1>

<p ng-bind="loginFailMessage" style="color: red"></p>
<form ng-submit="login()">
    <div id="input">
        <input type="text" ng-model="username" name="username" placeholder="Username"/>
    </div>
    <div id="input">
        <input type="password" ng-model="password" name="password" placeholder="Password"/>
    </div>
    <div id="input">
        <input type="submit" value="Log In" class="btn btn-default" ng-click="login()">
    </div>
</form>
