<div ng-show="isView('admin', 13)">
    <h2>Add New Lecturer</h2>
    <p class="alert alert-danger" ng-if="errorMessage != ''">{{errorMessage}}</p>
    <form>
        <div id="input">
            <h3>Username</h3>
            <input type="text" name="username" ng-model="lecturerid" disabled/>
        </div>
        <div id="input">
            <h3>Name</h3>
            <input type="text" ng-model="name" name="name" required/>
        </div>
        <div id="input">
            <h3>Password</h3>
            <input type="text" ng-model="password" name="password" required/>
        </div>
    </form>
    <h3>Select Course(s)</h3>
    <div
            isteven-multi-select
            max-labels="2"
            input-model="qs.courses()"
            output-model="formData.coursesList"
            button-label="coursecode"
            item-label="coursecode"
            tick-property="ticked"
            ng-if="qs.courses().length > 0"
    >
    </div>
    <p class="alert alert-danger" ng-if="qs.courses().length <= 0">There are currently no courses stored in the system.</p>

    <div id="btn-group">
        <button class="btn btn-default" ng-click="goBack()">Cancel</button>
        <md-button md-disable-backdrop="true" class="btn btn-default" ng-click="addNewLecturer($event)">Add New Lecturer</md-button>
    </div>

</div>

<div ng-show="isSharedView(14)">
    <h2>Edit or Delete Student
        <i class="titleIcon fa fa-times-circle" ng-click="goBack()" aria-hidden="true"></i>
        <i class="titleIcon fa fa-check-circle" ng-click="updateUser($event, 'lecturer')" aria-hidden="true"></i>
    </h2>
    <p class="alert alert-danger" ng-if="errorMessage != ''">{{errorMessage}}</p>
    <form>
        <div id="input">
            <h3>Username</h3>
            <input type="text" name="studentId" ng-model="selectedUser.studentId" disabled/>
        </div>
        <div id="input">
            <h3>Student ID</h3>
            <input type="number" ng-model="selectedUser.studentId" name="studentId" required/>
        </div>
        <div id="input">
            <h3>Name</h3>
            <input type="text" ng-model="selectedUser.name" name="name" required/>
        </div>
        <div id="input">
            <h3>Password</h3>
            <input type="text" ng-model="selectedUser.password" name="password" required/>
        </div>
    </form>
    <h3>Select Course(s)</h3>
    <div
            isteven-multi-select
            max-labels="2"
            input-model="qs.courses()"
            output-model="formData.coursesList"
            button-label="coursecode"
            item-label="coursecode"
            tick-property="ticked"
            ng-if="qs.courses().length > 0"
    >
    </div>
    <p class="alert alert-danger" ng-if="qs.courses().length <= 0">There are currently no courses stored in the system.</p>

    <div id="btn-group">
        <md-button md-disable-backdrop="true" class="btn btn-default" ng-click="deleteUser($event, 'lecturer')">Delete Student</md-button>
    </div>
</div>